<main>
  <section>
    <div class="row">
      <div class="column">
        <div class="h1-margin">
          <h1 class="h1">BLKY Pets</h1>
        </div>
        <div>
          <h3 class="h3">Accesorios para mascotas.</h3>
        </div>
      </div>

      <div class="column box dark">
        <div class="row">
          <h2 class="h2">Iniciar sesión</h2>
        </div>

        <div>
          <form action="/api/v1/sessions/login" method="post">
            <div class="column">
              <label class="label" for="email">Correo electrónico:</label>
              <input
                class="input"
                type="email"
                name="email"
                id="email"
                placeholder="Ingresa tu correo electrónico"
                required
              />
            </div>

            <div class="column">
              <label class="label" for="password">Contraseña:</label>
              <input
                class="input"
                type="password"
                name="password"
                id="password"
                placeholder="Ingresa tu contraseña"
                required
              />
            </div>

            <div class="row box-margin">
              <p class="p">¿No estás registrado? Registrate haciendo
                <a href="/register">click aquí</a>.</p>
            </div>

            <div class="row box-margin">
              <p class="p">¿Olvidaste tu contraseña? Haz
                <a href="/recover">click aquí</a>
                para generar una nueva.</p>
            </div>

            <div class="row btn-container">
              <button class="btn btn-submit" type="submit">Ingresar</button>
            </div>
          </form>

          <div class="btn-container">
            <div class="github-btn-container">
              <a href="/api/v1/sessions/github">
                <button class="btn github-btn btn-submit">Ingresar con
                  <img src="/assets/github-mark-white.png" />
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>